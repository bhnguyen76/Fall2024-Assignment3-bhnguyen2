@model Fall2024_Assignment3_bhnguyen2.Models.ActorDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Model.Actor.Name</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Gender)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.Gender)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Age)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.Age)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.IMDb)
        </dt>
        <dd class = "col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Actor.IMDb))
            {
                <a href="@Model.Actor.IMDb" target="_blank">@Model.Actor.IMDb</a>
            }
            else
            {
                <span>No IMDb link available</span>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Photo)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Actor.Photo != null)
            {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Actor.Photo)" alt="@Model.Actor.Name" style="max-width:100px;" />
            }
            else
            {
                <span>No image available</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Actor.Id" class="rounded-square-button">Edit</a> |
    <a asp-action="Index" class="rounded-square-button">Back to List</a>
</div>

<h3>Movies</h3>
<ul>
    @foreach (var movie in Model.Movies)
    {
        <li>@movie</li>
    }
</ul>

<h3>Tweets</h3>
<h6>Sentiment Average is @Model.SentimentAverage</h6>
<table class="table datatable">
    <thead>
        <tr>
            <th>Tweet</th>
            <th>Sentiment</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tweet in Model.Tweets)
        {
            <tr>
                <td>@tweet.Content</td>
                <td>@tweet.Sentiment</td>
            </tr>
        }
    </tbody>
</table>

