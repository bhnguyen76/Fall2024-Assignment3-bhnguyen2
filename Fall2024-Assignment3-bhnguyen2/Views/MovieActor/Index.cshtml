@model IEnumerable<Fall2024_Assignment3_bhnguyen2.Models.MovieActor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="rounded-square-button" class="rounded-square-button">Create New</a>
</p>
<table class="table datatable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Actor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Actor.Name)
                @if (item.Actor.Photo != null)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Actor.Photo)" alt="@item.Actor.Name" style="max-width:100px;" />
                }
                else
                {
                    <span>No image available</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Title)
                @if (item.Movie.Photo != null)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Movie.Photo)" alt="@item.Movie.Title" style="max-width:100px;" />
                }
                else
                {
                    <span>No image available</span>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="rounded-square-button">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="rounded-square-button">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="rounded-square-button">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
