@model IEnumerable<Fall2024_Assignment3_bhnguyen2.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="rounded-square-button">Create New</a>
</p>
<table class="table datatable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IMDb)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                    @if (!string.IsNullOrWhiteSpace(item.IMDb))
                {
                        <a href="@item.IMDb" target="_blank">View on IMDb</a>
                } 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @if (item.Photo != null)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Photo)" alt="@item.Title" style="max-width:100px;" />
                }
                else
                {
                    <span>No image available</span>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="rounded-square-button">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="rounded-square-button">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="rounded-square-button">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
