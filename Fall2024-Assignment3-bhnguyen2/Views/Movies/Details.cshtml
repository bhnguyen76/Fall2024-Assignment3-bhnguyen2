@model Fall2024_Assignment3_bhnguyen2.Models.MovieDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Model.Movie.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.IMDb)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Movie.IMDb))
            {
                <a href="@Model.Movie.IMDb" target="_blank">@Model.Movie.IMDb</a>
            }
            else
            {
                <span>No IMDb link available</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Photo)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Movie.Photo != null)
            {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Movie.Photo)" alt="@Model.Movie.Title" style="max-width:100px;" />
            }
            else
            {
                <span>No image available</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Movie.Id" class="rounded-square-button">Edit</a> |
    <a asp-action="Index" class="rounded-square-button">Back to List</a>
</div>

<h3>Actors</h3>
<table class="table datatable">
    <thead>
        <tr>
			<th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var actor in Model.Actors)
        {
            <tr>
                <td>@actor</td>
            </tr>
        }
    </tbody>
</table>

<h3>Reviews</h3>
<h6>Sentiment Average is @Model.SentimentAverage</h6>
<table class="table datatable">
    <thead>
        <tr>
            <th>Review</th>
            <th>Sentiment</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model.Reviews)
        {
            <tr>
                <td>@review.Content</td>
                <td>@review.Sentiment</td>
            </tr>
        }
    </tbody>
</table>
